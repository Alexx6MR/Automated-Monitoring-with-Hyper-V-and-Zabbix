[zabbix_server]
192.168.1.240
# Aquí no ponemos IPs porque las pasamos dinámicamente desde el script

[zabbix_nodes]
# Aquí irán los nodos cuando los despliegues

[zabbix_server:vars]
ansible_user=deploy
ansible_ssh_private_key_file=~/.ssh/deploy_key
ansible_ssh_common_args='-o StrictHostKeyChecking=no'

[zabbix_nodes:vars]
ansible_user=deploy
ansible_ssh_private_key_file=~/.ssh/node_key
ansible_ssh_common_args='-o StrictHostKeyChecking=no'